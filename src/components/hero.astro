---
import { Image } from "@astrojs/image/components";
import heroImage from "assets/zksynth-logo.png";
import Link from "@components/ui/link.astro";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-8">
  <div class="py-6 md:order-1 hidden md:block">
    <Image
      src={heroImage}
      alt="Astronaut in the air"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight">
      The Future of Synthetics on zkSync
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      zkSynth allows you to create and trade synthetic assets that track the price of any real-world asset, such as stocks, commodities, currencies, and more.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- <Link
        href="#"
        href="https://web3templates.com/"
        target="_blank"
        rel="noopener">Get Started</Link
      > -->
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/">Coming Soon</Link
      >
    </div>
  </div>
</main>
